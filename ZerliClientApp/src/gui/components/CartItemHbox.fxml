         </padding>
      </Label>
      <Label fx:id="quntityLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="52.0" prefWidth="101.0" text="x 4" textAlignment="CENTER">
         <font>
            <Font name="Maiandra GD" size="24.0" />
         </font>
      </Label>
      <Label fx:id="catalogTypeLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="52.0" prefWidth="154.0" text="Custom" textAlignment="CENTER">
         <font>
            <Font name="Maiandra GD" size="24.0" />
         </font>
      </Label>
      <Label fx:id="itemTypeLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="52.0" prefWidth="190.0" text="Flowers" textAlignment="CENTER">
